root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[*.{kt,kts}]
# Package name validation re-enabled after refactoring
# ktlint_standard_package-name = disabled
# Ensure files end with newline
insert_final_newline = true
# Allow wildcard imports for domain models
ktlint_standard_no-wildcard-imports = disabled

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab